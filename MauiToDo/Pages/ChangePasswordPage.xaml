<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiToDo.Pages.ChangePasswordPage"
             Title="Sifre Degistir">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="CurrentPasswordEntry" Placeholder="Mevcut Sifre" IsPassword="True" />
        <Entry x:Name="NewPasswordEntry" Placeholder="Yeni Sifre" IsPassword="True" />
        <Button Text="Degistir" Clicked="OnChangePasswordClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
