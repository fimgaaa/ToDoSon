<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiToDo.Pages.RegisterPage"
             Title="Kayit Ol">
    <VerticalStackLayout Padding="30" Spacing="15">
        <Entry x:Name="UsernameEntry" Placeholder="Kullanici Adi" />
        <Entry x:Name="EmailEntry" Placeholder="E-posta" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Sifre" IsPassword="True" />
        <Button Text="Kayit Ol" Clicked="OnRegisterClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
